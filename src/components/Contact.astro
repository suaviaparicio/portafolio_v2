---
import ClipboardComponent from "./ClipboardComponent.jsx";
---

<div class="w-full max-w-[16rem]">
    <div class="relative text-center">
        <div id="contact-details" class="space-y-2 text-gray-900 text-3xl dark:text-white font-medium leading-loose mb-3">
        laparici9@gmail.com
        </div>
        <button id="copy-button" data-copy-to-clipboard-target="copy-email" class="bg-[#A9D6E0] border-2 border-[#575757] rounded-[10px] shadow-[4px_4px_0_0_#575757] text-black cursor-pointer inline-block text-md px-4 leading-[30px] text-center select-none duration-300 active:shadow-[2px_2px_0_0_#575757] active:translate-x-[2px] active:translate-y-[2px]">
            <span id="default-icon-contact-details" class="inline-flex items-center">
                <svg class="size-4 me-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="currentColor" viewBox="0 0 18 20">
                    <path d="M16 1h-3.278A1.992 1.992 0 0 0 11 0H7a1.993 1.993 0 0 0-1.722 1H2a2 2 0 0 0-2 2v15a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V3a2 2 0 0 0-2-2Zm-3 14H5a1 1 0 0 1 0-2h8a1 1 0 0 1 0 2Zm0-4H5a1 1 0 0 1 0-2h8a1 1 0 1 1 0 2Zm0-5H5a1 1 0 0 1 0-2h2V2h4v2h2a1 1 0 1 1 0 2Z"/>
                </svg>
                <span class="text-md ">Copiar</span>
            </span>
            <span id="success-icon-contact-details" class="hidden inline-flex items-center">
                <svg class="size-4 text-gray-600 dark:text-gray-600 me-1.5" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 16 12">
                    <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 5.917 5.724 10.5 15 1.5"/>
                </svg>
                <span class="text-md  text-gray-600 dark:text-white">Copied</span>   
            </span>
        </button>
    </div>
    <ClipboardComponent client:load />
</div>

